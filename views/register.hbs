{{> navbarLoguedoff}}

<div class="container my-5 text-center border rounded bg-light">
    <h3 class="iniciar text-center mt-5">Registrarse</h3>
    <form class="form text-center">
        <div class="row mt-5 mb-4">
            <div class="col text-start">
                <label>Nombre</label>
                <input type="text" class="form-control mt-2" placeholder="Ingresa tu nombre" aria-label="Ingresa tus apellidos">
            </div>
            <div class="col text-start">
                <label>Apellido</label>
                <input type="text" class="form-control mt-2" placeholder="Ingrese sus apellidos" aria-label="Last name">
            </div>
        </div>
        <div class="row mb-4">
            <div class="col text-start">
                <label>Edad</label>
                <input type="text" class="form-control mt-2" placeholder="Ingresa tu nombre" aria-label="Ingrese su edad">
            </div>
            <div class="col text-start">
                <label>Telefono</label>
                <input type="text" class="form-control mt-2" placeholder="Ingrese su numero de telefono" aria-label="Telefono">
            </div>
        </div>
        <div class="row mb-4">
            <div class="col text-start">
                <label>Direccion</label>
                <input type="text" class="form-control mt-2" placeholder="Ingrese su direccion" aria-label="Direccion">
            </div>
            <div class="col text-start">
                <label>Email</label>
                <input type="text" class="form-control mt-2" placeholder="Ingrese su correo electronico" aria-label="email">
            </div>
        </div>
        <div class="row mb-4">
            <div class="col text-start">
                <label>Contraseña</label>
                <input type="password" class="form-control mt-2" placeholder="Ingrese una contraseña segura" aria-label="Ingrese su contraseña">
            </div>
            <div class="col text-start">
                <label>Repita su contraseña</label>
                <input type="password" class="form-control mt-2" placeholder="Confirme su contraseña" aria-label="Confirmar contraseña">
            </div>
        </div>
        
        <button class="btn btn-success my-3">Registrar</button>
        <p>¿Ya tienes una cuenta? <a href="/login">Iniciar Sesion</a></p>
    </form>
</div>

